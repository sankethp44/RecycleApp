<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#CEE6CF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/people_recycling_at_home_concept_free_vector_1"
            android:layout_width="@dimen/_276sdp"
            android:layout_height="@dimen/_289sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:contentDescription="people_recycling_at_home_concept_free_vector_1"
            android:src="@drawable/people_recycling_at_home_concept_free_vector_1" />
        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#67AC6E"
            android:padding="8dp"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/earn_points_by_discarding_trash"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_47sdp"
            android:layout_marginStart="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:text="@string/earn_points_by_discarding_trash_string"
            android:textColor="@color/earn_points_by_discarding_trash_color"
            android:textSize="25sp" />
    </RelativeLayout>

    <TextView android:id="@+id/categories"
        android:textStyle="bold"
        android:textSize="@dimen/_25ssp"
        android:textColor="#53AF4C"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_369sdp"
        android:layout_width="257.2dp"
        android:layout_height="48.2dp"
        android:text="Recyclable Items"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_416sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_18sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Sample Category Image Views -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="171dp"
                android:layout_height="184dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/category_image_1" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="171dp"
                android:layout_height="184dp"
                android:src="@drawable/category_image_2"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="171dp"
                android:layout_height="184dp"
                android:src="@drawable/category_image_3"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/image4"
                android:layout_width="171dp"
                android:layout_height="184dp"
                android:src="@drawable/category_image_4"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_width="171dp"
                android:layout_height="184dp"
                android:src="@drawable/category_image_5"
                android:layout_marginRight="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>


</FrameLayout>